@model IEnumerable<ConsumerProfileViewModel>
@{
    ViewData["Title"] = "History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4>History</h4>
        </div>
        <div class="card-body">
            <table id="dtTable" class="table table-bordered">
                <thead>
                    <th></th>
                    <th>Consumer Name</th>
                    <th>Basic Salary</th>
                    <th>Birthdate</th>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center;">
                                <a class="btn btn-primary" id="editHistoryBtn" asp-controller="Benefit" asp-action="HistoryEdit" asp-route-id="@item.Id">Edit</a>
                            </td>
                            <td>@item.ConsumerName</td>
                            <td>@item.BasicSalary</td>
                            <td>@item.BirthdateStr</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $('#dtTable').dataTable({});
</script>