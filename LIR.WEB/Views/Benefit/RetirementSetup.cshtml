@model RetirementSetupViewModel
@{
    ViewData["Title"] = "Retirement Setup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-9">
    <form asp-controller="Benefit" asp-action="RetirementSetup" method="post">
        <div class="card">
            <div class="card-header">
                <div class="card-title">
                    <h4>Retirement Setup</h4>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    @Html.HiddenFor(x => x.Id)
                    <div class="col-lg-12">
                        <label asp-for="GuaranteedIssue"></label>
                        <input class="form-control" type="number" asp-for="GuaranteedIssue" id="GuaranteedIssue">
                        <span class="text-danger" asp-validation-for="GuaranteedIssue"></span>
                    </div>
                    <div class="col-lg-12">
                        <label asp-for="MaxAgeLimit"></label>
                        <input class="form-control" type="number" asp-for="MaxAgeLimit" id="MaxAgeLimit">
                        <span class="text-danger" asp-validation-for="MaxAgeLimit"></span>
                    </div>
                    <div class="col-lg-12">
                        <label asp-for="MinAgeLimit"></label>
                        <input class="form-control" type="number" asp-for="MinAgeLimit" id="MinAgeLimit">
                        <span class="text-danger" asp-validation-for="MinAgeLimit"></span>
                    </div>
                    <div class="col-lg-12">
                        <label asp-for="MinimumRange"></label>
                        <input class="form-control" type="number" asp-for="MinimumRange" id="MinimumRange">
                        <span class="text-danger" asp-validation-for="MinimumRange"></span>
                    </div>
                    <div class="col-lg-12">
                        <label asp-for="MaximumRange"></label>
                        <input class="form-control" type="number" asp-for="MaximumRange" id="MaximumRange">
                        <span class="text-danger" asp-validation-for="MaximumRange"></span>
                    </div>
                    <div class="col-lg-12">
                        <label asp-for="Increments"></label>
                        <input class="form-control" type="number" asp-for="Increments" id="Increments">
                        <span class="text-danger" asp-validation-for="Increments"></span>
                    </div>
                </div>
            </div>
            <div class="card-footer" style="text-align:end;">
                <button class="btn btn-success" type="submit" id="submitSetupBtn">Submit</button>
            </div>
        </div>
    </form>
</div>
